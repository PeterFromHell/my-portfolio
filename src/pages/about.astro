<style>
    @import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Instrument+Serif:ital@1&display=swap');
    .navbar {
        background-color: #17161C;
        width: 100%;
        height: 5rem;
        position: sticky;
    }
    .navbar h3{
        color: aliceblue;
        font-size: 2.5rem;
        font-family: 'Dancing Script', cursive;
    }
    .intro-1 {
        background-color: #1F1E25;
        width: 100%;
        height: 23rem;
        padding-left: 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .intro-1 h1{
        color: aliceblue;
        font-size: 4rem;
        font-family: 'Instrument Serif', serif;    
    }
    .intro-1 p {
        color: aliceblue;
        font-family: 'Instrument Serif', serif;    
        font-size: 1.3rem;
    }
    .intro-2 {
        background-color: #F4F4F2;
        border: black solid 1px;
        width: 100%;
        height: 23rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: right;
    }
    .intro-2-container {
        border: solid black 1px;
        float: right;
    }
    .intro-2 h1{
        color: black;
        font-size: 4rem;
        font-family: 'Instrument Serif', serif; 
    }
